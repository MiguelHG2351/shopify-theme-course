{% assign main_menu_linklists = linklists[section.settings.main_menu].links %}
<div class="relative bg-white">
  <div class="mx-auto px-4 sm:px-6">
    <div class="flex justify-center items-center py-6 md:justify-start md:space-x-10">
      <!-- STORE NAME / STORE LOGO -->
      <div class="flex justify-start lg:flex-1 truncate">
        <h1 class="text-xl font-bold truncate">{{ section.settings.title_page }}</h1>
      </div>

      <!-- NAVIGATION MENU -->
      <nav class="md:flex space-x-10">
        {% for link in main_menu_linklists %}
          {% if link.links != blank %}
            <div class="relative group">
              <button class="text-base text-gray-500 hover:text-gray-900">
                {{ link.title }}
                {% render 'icon-dropdown' %}
              </button>
              <div class="">
                <ul class="hidden shadow-lg p-4 absolute top-full group-hover:flex group-hover:flex-col">
                  {% for _link in link.links %}
                    <li>
                      <a href="{{ _link.url }}" class="text-base text-gray-500 hover:text-gray-900">
                        {{- _link.title -}}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          {% else %}
            <div class="relative">
              <a href="{{ link.url }}" class="text-base text-gray-500 hover:text-gray-900">{{ link.title }}</a>
            </div>
          {% endif %}
        {% endfor %}
      </nav>

      <div class="hidden md:flex items-center justify-end md:flex-1 space-x-5">
        <a href="{{ routes.cart_url }}" class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900">
          {% render 'icon-shopping-bag' %}
        </a>

        <a href="{{ routes.account_login_url }}" class="text-base text-gray-500 hover:text-gray-900">Login</a>
        <a href="{{ routes.account_register_url }}" class="text-base text-gray-500 hover:text-gray-900">Register</a>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "header-page",
  "settings": [
    {
      "type": "text",
      "id": "title_page",
      "label": "Title",
      "default": "Avocado store"
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Header menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}